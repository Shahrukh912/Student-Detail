<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/img"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="Name"
        android:textColor="@color/black"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <TextView
            android:id="@+id/scores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:textSize="20dp"
            android:text="Scores"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/sc1type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scores"
            android:text="Exam"/>
        <TextView
            android:id="@+id/sc1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scores"
            android:layout_toRightOf="@+id/sc1type"
            android:layout_marginLeft="15dp"
            android:text="12.345"/>
        <TextView
            android:id="@+id/sc2type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sc1type"
            android:text="Quiz"/>
        <TextView
            android:id="@+id/sc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sc1type"
            android:layout_toRightOf="@+id/sc2type"
            android:layout_marginLeft="22dp"
            android:text="12.345"/>
        <TextView
            android:id="@+id/sc3type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sc2type"
            android:text="HW"/>
        <TextView
            android:id="@+id/sc3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sc2"
            android:layout_toRightOf="@+id/sc3type"
            android:layout_marginLeft="27dp"
            android:text="12.345"/>


    </RelativeLayout>



</LinearLayout>